{
  "compilerOptions": {
    "target": "es2023",
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./ts-output",

    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./js/**/*.ts",
    "./js/**/*.tsx"
  ],
  "exclude": [
    "./js/**/*.test.ts",
    "./js/**/*.test.tsx"
  ]
}
